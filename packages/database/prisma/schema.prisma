// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  phoneNumber  String
  password     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  oderbook     Orderbook[]
  balance      Float?
  transactions Transaction[]
  asset        Asset[]
  otp          Otp[]
}

model Orderbook {
  id        String   @id @default(uuid())
  type      String
  qty       Int
  price     Float
  method    String   @default("sell")
  executed  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  assetId String
  asset   Asset  @relation(fields: [assetId], references: [id])

  transaction Transaction[]
}

model Transaction {
  id       String  @id @default(uuid())
  amount   Float
  qty      Int
  type     String
  method   String  @default("sell")
  executed Boolean @default(false)

  orderBookId String
  orderBook   Orderbook @relation(fields: [orderBookId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  assetId String
  asset   Asset  @relation(fields: [assetId], references: [id])
}

model Asset {
  id           String @id @default(uuid())
  title        String
  maxPrice     Int    @default(0)
  buyPriceYes  Int    @default(0)
  buyPriceNo   Int    @default(0)
  sellPriceYes Int    @default(0)
  sellPriceNo  Int    @default(0)
  userId       String
  user         User   @relation(fields: [userId], references: [id])

  image       String?
  orders      Orderbook[]
  Transaction Transaction[]
}

model Otp {
  id        String   @id @default(uuid())
  otp       Int      @unique
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
